<robot name="my_robot">

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 0.1"/>
      </geometry>
      <material name="Blue">
        <color rgba="0.2 0.8 0.4 0.4"/>
      </material>
    </visual>
  </link>

  <!-- 定义一个虚拟的父link，叫 world -->
  <link name="world"/>

  <!-- 用固定关节把 base_link 连接到 world -->
  <joint name="base_to_world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
